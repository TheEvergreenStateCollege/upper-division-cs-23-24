generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Server {
  id        Int      @id @default(autoincrement())
  discordID String   @unique
  name      String  
} 

model NotableDay {
  id            Int      @id @default(autoincrement())
  date          DateTime @unique  
  messageCount  Int      
  messageDelta  Int  
}
